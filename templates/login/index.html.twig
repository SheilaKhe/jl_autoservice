{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    
    <section id="registerLogin-form">
    <h2>Connexion</h2>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <input placeholder="E-mail" type="text" id="username" name="_username" value="{{ last_username }}"/>

        <input placeholder="Mot de passe" type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-primary" style="margin-top: 5vh">Se connecter</button>
    </form>
    <p>Pas encore de compte? <a href="{{path('app_register')}}">Enregistrez-vous</a></p>
    </section>
{% endblock %}